<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>serendip.lumi</groupId>
	<artifactId>lumi</artifactId>
	<version>3.0.0</version>
	<packaging>pom</packaging>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.version>1.7</java.version>

		<lumi.version>3.0.0</lumi.version>
		<struts2.version>2.3.20</struts2.version>
		<struts2-jquery.version>3.7.1</struts2-jquery.version>
		<struts2-bootstrap.version>2.0.0</struts2-bootstrap.version>
		<spring.version>3.2.8.RELEASE</spring.version>
		<mybatis.version>3.2.7</mybatis.version>
		<log4j.version>2.1</log4j.version>
		<thymeleaf.version>2.1.3</thymeleaf.version>
		<mybatis-spring.version>1.2.2</mybatis-spring.version>
		<cglib.version>2.2.2</cglib.version>
		<aspectjweaver.version>1.7.4</aspectjweaver.version>
		<javassist.version>3.12.0.GA</javassist.version>
		<lombok.version>1.14.8</lombok.version>
		<commons-codec.version>1.8</commons-codec.version>
		<javax.mail-api.version>1.5.2</javax.mail-api.version>
		<mail.version>1.5.0-b01</mail.version>


	</properties>
	<modules>
		<module>../lumi-core</module>
		<module>../lumi-blank</module>
	</modules>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>serendip.lumi-core</groupId>
				<artifactId>lumi-core</artifactId>
				<version>${lumi.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
</project>